<Window x:Class="NotoNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotoNote"
        mc:Ignorable="d"
        Title="Noto note" Height="280" Width="280" Topmost="True">
    <StackPanel Margin="12">
        <ComboBox
            ItemsSource="{Binding AvailableProfiles}"
            SelectedItem="{Binding SelectedProfile}"
            Width="200"

            >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name.Value}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="{Binding Status}" FontSize="14" />
        <TextBox Text="{Binding ResultText}" Margin="0,10,0,0" AcceptsReturn="True" Height="17.96"/>
    </StackPanel>
</Window>
