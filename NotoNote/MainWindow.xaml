<Window x:Class="NotoNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotoNote"
        xmlns:vm="clr-namespace:NotoNote.ViewModels"
        mc:Ignorable="d"
        Title="Noto note" Height="280" Width="280" Topmost="True">
    <Window.DataContext>
        <vm:MainViewModel x:Name="ViewModel" />
    </Window.DataContext>
    
    <StackPanel Margin="12">
        <TextBlock Text="{Binding Status}" FontSize="14" />
        <TextBox Text="{Binding ResultText}" Margin="0,10,0,0" AcceptsReturn="True" Height="60"/>
    </StackPanel>
</Window>
